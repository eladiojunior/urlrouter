@{
    ViewData["Title"] = "Configurar Rota Url";
}
<div class="row">
    <div class="col-xs-12 col-sm-9">
        <div class="card">
            <div class="card-header"><strong>Lista de Configuracões de Url</strong></div>
            <div class="card-body lista-ativos">
                Lista de configurações de Urls...
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-3">
        <div class="d-sm-none">&nbsp;</div>
        <div class="form-group">
            <button class="form-control btn btn-primary registrar" title="Registrar nova configuração de rota Url.">Nova Rota Url</button>
        </div>
        <div class="card">
            <div class="card-body">
                <form class="form-filtro">
                    <div class="form-group">
                        <label for="Nome">Nome da Rota</label>
                        <input type="text" class="form-control" name="Nome" placeholder="Nome ou parte da rota de Url">
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" name="HasVigentes" id="HasVigentes">
                        <label class="form-check-label" for="HasVigentes">Exibir somente vigentes</label>
                    </div>
                    <div class="float-right">
                        <button type="button" class="btn btn-primary filtrar">Filtrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/rotaurl/index.js" asp-append-version="true"></script>
}